<view bind:tap="onTap" class="container {{c.statusStyle(cell.status).outer}}">
    <view class="inner-container {{c.statusStyle(cell.status).inner}}">
        <image wx:if="{{cell.skuImg}}" mode="aspectFit" src="{{cell.skuImg}}" class="img"></image>
        <text>{{cell.title}}</text>
    </view>
</view>

<wxs module="c">
    function statusStyle(status) {
        // status='forbidden'
        if(status=== "forbidden"){
            return {
                outer:"forbidden",
                inner: ""
            }
        }else if(status === "selected"){
            return {
                outer:'s-outer',
                inner:'s-inner'
            }
        }
    }

    module.exports.statusStyle=statusStyle
</wxs>